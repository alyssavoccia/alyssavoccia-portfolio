---
import Section from "../Section.astro";
import HTML from "../../icons/html.astro";
import CSS from "../../icons/css.astro";
import JavaScript from "../../icons/javascript.astro";
import React from "../../icons/react.astro";
import MySQL from "../../icons/sql.astro";
import Git from "../../icons/git.astro";
import GitHub from "../../icons/GitHub.astro";
import Tailwind from "../../icons/tailwind.astro";
import Bootstrap from "../../icons/bootstrap.astro";
import MongoDB from "../../icons/mongodb.astro";
import Python from "../../icons/python.astro";
import Laravel from "../../icons/laravel.astro";
import Livewire from "../../icons/livewire.astro";
import { skills } from "../../../cv.json";

const SKILLS_ICONS: Record<string, any> = {
	HTML,
	CSS,
	JavaScript,
	React,
	MySQL,
	Git,
	GitHub,
	Tailwind,
    Bootstrap,
    MongoDB,
    Python,
    Laravel,
    Livewire
};
---

<Section className={Astro.props.className} title="Skills">
	<ul class="[&>li>svg]:text-purple-600 inline-flex flex-wrap gap-6 [&>li>svg]:size-5 [&>li]:text-sm">
		{
			skills.map(skill => {
				const Icon = SKILLS_ICONS[skill];

				return (
					<li class="flex items-center gap-1 rounded-md px-2 py-0.5 text-xs text-skin-muted print:border-none print:bg-transparent print:p-0 print:text-zinc-800">
						{Icon && <Icon />} <span>{skill}</span>
					</li>
				);
			})
		}
	</ul>
</Section>